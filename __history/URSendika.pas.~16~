type
  TFSendika = class(TForm)
    Table1: TUniTable;
    DataSource2: TDataSource;
    DBGrid1: TDBGrid;
    Panel1: TPanel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Vazgec: TBitBtn;
    HazirBt: TBitBtn;
    YaziBt: TBitBtn;
    Edit2: TEdit;
    Edit3: TEdit;
    Edit4: TEdit;
    Query2: TUniQuery;
    DataSource1: TDataSource;
    UniQuery1: TUniQuery;
