uses UData, UGelirkod;

{$R *.DFM}

procedure TFKazanclar.EditKazadiKeyPress(Sender: TObject; var Key: Char);
begin
if Key=Chr(VK_Return) Then Perform(Wm_NextDlgCtl,0 ,0);
end;



procedure TFKazanclar.BitBtn1Click(Sender: TObject);
begin
Close;
end;









procedure TFKazanclar.SilBtClick(Sender: TObject);
begin

   if messagebox (handle,'Bu Kaydý Silmek Ýstiyor musunuz?', 'DÝKKAT',mb_YesNo +
   mb_iconquestion) <> mrNo then
   begin
      FData.TKATSAY1.Delete;
      FData.TKAZANC.Delete;
   end;
end;


procedure TFKazanclar.BitBtn2Click(Sender: TObject);
begin
     if(FData.TKAZANC.State=DsEdit)or(FData.TKAZANC.State=Dsinsert) then
          FData.TKAZANC.Post;
     if(FData.TKATSAY1.State=DsEdit)or(FData.TKATSAY1.State=Dsinsert) then
      FData.TKATSAY1.Post;
end;


procedure TFKazanclar.VazgecClick(Sender: TObject);
begin
if(FData.TKAZANC.State=DsEdit)or(FData.TKAZANC.State=Dsinsert) or
(FData.TKATSAY1.State=DsEdit)or(FData.TKATSAY1.State=Dsinsert) then
begin
   if MessageBox(handle,'Deðiþikleri Kaydedilsinmi','KAPANIÞ',
    mb_YesNo + MB_ICONQUESTION) <> mrYes then
    begin
     FData.TKAZANC.Cancel;
     FData.TKATSAY1.Cancel;
     end else
      begin
     if(FData.TKAZANC.State=DsEdit)or(FData.TKAZANC.State=Dsinsert) then
          FData.TKAZANC.Post;
     if(FData.TKATSAY1.State=DsEdit)or(FData.TKATSAY1.State=Dsinsert) then
      FData.TKATSAY1.Post;
     end;
end;

Close;
end;


procedure TFKazanclar.FormClose(Sender: TObject; var Action: TCloseAction);
begin
FData.TGelirKod.Close;
FData.TKATSAY1.Close;
FData.TKATSAY2.Close;
end;

procedure TFKazanclar.FormCreate(Sender: TObject);
begin
FData.TGelirKod.Open;
FData.TKATSAY1.Open;
FData.TKATSAY2.Open;

end;

procedure TFKazanclar.BitBtn3Click(Sender: TObject);
begin
	Screen.Cursor := crHourGlass;
  with TFGelirkod.Create( Self ) do
   	try
	  Screen.Cursor := crDefault;
          ShowModal;
        finally
        free;
   end;


end;

end.
